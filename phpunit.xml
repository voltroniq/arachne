<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
         verbose="true">
    <testsuites>
        <testsuite name="Unit">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="false" />

    <php>
        <!-- Escape & as &amp; -->
        <ini name="error_reporting" value="E_ALL &amp; ~E_DEPRECATED"/>
        <directory>./tests</directory>
    </php>
</phpunit>